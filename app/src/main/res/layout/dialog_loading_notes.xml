<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Animated Icon/Logo -->
        <ImageView
            android:id="@+id/ivLoadingIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_notes"
            android:backgroundTint="@color/primary"
            android:padding="20dp"
            android:layout_marginBottom="24dp" />

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:indeterminate="true"
            app:indicatorColor="@color/primary"
            app:trackColor="@color/surface_dark"
            app:indicatorSize="64dp"
            app:trackThickness="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvLoadingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generating Notes"
            android:textColor="@color/text_primary_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Status Message -->
        <TextView
            android:id="@+id/tvLoadingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparing your notes..."
            android:textColor="@color/text_secondary_light"
            android:textSize="14sp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Dots Animation -->
        <TextView
            android:id="@+id/tvLoadingDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

