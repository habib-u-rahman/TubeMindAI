<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_dark"
    tools:context=".SplashActivity">

    <!-- Animated Logo Container -->
    <LinearLayout
        android:id="@+id/llLogoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- App Icon with Animation -->
        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_app_logo_final"
            android:contentDescription="TubeMind AI Logo"
            android:scaleType="fitCenter"
            android:elevation="8dp" />

        <!-- App Name with Fade Animation -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TubeMind AI"
            android:textColor="@color/primary"
            android:textSize="38sp"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:alpha="0"
            android:letterSpacing="0.05" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YouTube Notes Generator"
            android:textColor="@color/text_secondary_dark"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:alpha="0"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <!-- Loading Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        app:indicatorColor="@color/primary_light"
        app:trackColor="@color/surface_dark"
        android:layout_marginBottom="80dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

